module mux_colors(input logic [23:0] rgb0 , rgb1, rgb2, rgb3,
						output logic [7:0] r, g, b,
						input logic [1:0] sel);
						
						
						
						
always_comb begin

if(sel == 2'b00)
begin
	r <= rgb0[7:0];
	g <= rgb0[15:8];
	b <= rgb0[23:16];
end
if(sel == 2'b01)
begin
	r <= rgb1[7:0];
	g <= rgb1[15:8];
	b <= rgb1[23:16];
end
if(sel == 2'b10)
begin
	r <= rgb2[7:0];
	g <= rgb2[15:8];
	b <= rgb2[23:16];
end
if(sel == 2'b11)
begin
	r <= rgb3[7:0];
	g <= rgb3[15:8];
	b <= rgb3[23:16];
end

end
						
						
						
			




endmodule
